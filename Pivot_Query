CREATE TABLE Merch_appl
(
    id INT ,
    Attri VARCHAR(50) NOT NULL,
    Val VARCHAR(50) NOT NULL
 );
 
INSERT INTO Merch_appl VALUES (1, 'Name', 'Jolly'); 
INSERT INTO Merch_appl VALUES (1, 'Loan', '10000'); 
INSERT INTO Merch_appl VALUES (1, 'Fee', '1000'); 

